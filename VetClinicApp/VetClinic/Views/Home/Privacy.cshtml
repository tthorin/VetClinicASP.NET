@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
      <div class="col-10 col-sm-8 col-lg-6">
        <img src="~/images/Investigation-PNG-Image.png" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
      </div>
      <div class="col-lg-6">
        <h1 class="display-5 fw-bold lh-1 mb-3">We value your privacy</h1>
        <p class="lead">We dont keep, save, or otherwise retain any form of tracking information about you nor have any contact with any third-parties.</p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
          <a class="btn btn-primary btn-lg px-4 me-md-2" asp-controller="Home" asp-action="Index">Home</a>
          <a class="btn btn-outline-secondary btn-lg px-4" asp-controller="Home" asp-action="About">About</a>
        </div>
      </div>
    </div>
  </div>